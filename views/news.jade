// News start
section#news.module
    .container(ng-controller="ctr_memo", ng-app='app_memo' ng-cloak='')
        .row
            .col-sm-6.col-sm-offset-3
                .module-header.wow.fadeInUp
                    h2.module-title 루스트 소식
                    h3.module-subtitle ROOST NEWS
        .row
            .col-md-12
                ng-view Loading...
        .row
            script(type='text/ng-template', id='list.html')
                .row
                    .col-md-12
                        form.form-inline(align="right")
                            .form-group
                                //label Search words:&nbsp
                                input.form-control(id='id_searchText', name='id_searchText',
                                    ng-keyup="$event.keyCode == 13 ? searchClick() : null",
                                    type='text', placeholder='Search words...', ng-model='searchText')
                                //.checkbox
                                    label
                                        input(type="checkbox", ng-model="completeBool")
                                        |&nbsp;exclude complete&nbsp;
                                &nbsp;
                                input.btn.btn-default(type='button', value='Search', ng-click='searchClick()')
                                //input.btn.btn-default(type='button',value='New post', ng-click='newPostClick()')
                                //label &nbsp;total count: &nbsp;{{total_cnt}}
                //br
                //.row
                    .col-md-12
                        span.badge(style="cursor:pointer", ng-click='searchClick("All")') All
                        span.badge(style="cursor:pointer", ng-repeat="item in keywords", ng-click="searchClick(item)", ng-class="{'selected-badge': item == sharedDObj.searchCriteria.searchTags}") {{item}}

                .table-responsive
                    table.table.mytable
                        thead
                            th(width="10%", style="text-align: center") 번호
                            th(width="60%", style="text-align: center") 제목
                            th(width="20%", style="text-align: center") 작성일
                            th(width="10%", style="text-align: center") 조회
                        tbody
                            tr(ng-repeat="item in test_cols", style="cursor:pointer", ng-click='rowClick($index)')
                                td(id='col_index_{{$index}}', style="text-align: center") {{((curPage - 1) * perPage) + $index + 1}}
                                td(id='col_contents_{{$index}}', style="text-align: left") {{item.title}}
                                td(id='col_date_{{$index}}', style="text-align: center") {{item.edit_date}}
                                td(id='col_tags_{{$index}}', style="text-align: center")
                                    span.badge {{item.tags}}

                div(style='text-align: center;')
                    pagination.pagination-sm(boundary-links='true', total-items='total_cnt', ng-model='curPage', ng-change='pageChanged()', items-per-page='perPage', max-size='maxPaginationPerPage', previous-text='‹', next-text='›', first-text='«', last-text='»')

            script(type='text/ng-template', id='detail.html')
                form.form-inline(method='post', action='/memo/save')
                    .form-group
                        .row(id='id_editComp')
                            .col-md-12
                                label Title: &nbsp
                                input.form-control(id='id_sel_title', name='sel_title', type='text', ng-model='sel_title', style="width: 100%")
                            .col-md-12
                                label Contents: &nbsp
                                div(id="summernote")
                            .col-md-12
                                label Tags: &nbsp
                                input.form-control(id='id_sel_tags', name='sel_tags', type='text', ng-model='sel_tags', style="width: 100%")
                            .col-md-12
                                label Due date: &nbsp
                                input#inp_date.form-f21(type='text', ng-model='sel_due_date', name='sel_due_date', placeholder='yyyy-mm-dd', style='width: 100%')
                                .checkbox
                                    label
                                        input(type="checkbox", ng-model="sel_notice_bool", name='sel_notice_bool')
                                        |&nbsp;use notice
                            .col-md-12
                                input.btn.btn-default(type='button',value='Save', ng-click='savePost()')
                                input.btn.btn-default(type='button',value='Complete', ng-click='completeClick(sel_id)', ng-hide="!completeButtonBool || sel_id == ''")
                                input.btn.btn-default(type='button',value='Cancel Completion', ng-click='cancelCompletionClick(sel_id)', ng-hide="completeButtonBool || sel_id == ''")
                                input.btn.btn-default(type='button',value='Cancel', ng-click='cancleClick()')
                                input.form-control(name='sel_id', type='text', ng-model='sel_id', ng-hide='true')